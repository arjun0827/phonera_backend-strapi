    },
    "datetext": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "description": {
      "type": "richtext"
    },
    "slug": {
      "type": "string"
    },
    "blogPara": {
      "type": "string"
    },
    "ReadTime": {
      "type": "string"
    },
    "date": {
      "type": "date"
    },
    "category": {
      "displayName": "category",
      "type": "component",
      "repeatable": true,
      "component": "post.category"
    },
    "author": {
      "displayName": "Author",
      "type": "component",
      "repeatable": false,
      "component": "post.author"
    },
    "button": {
      "displayName": "button",
      "type": "component",
      "repeatable": true,
      "component": "post.button"
